<div class="container" style="width: 300px;">
    <h3 class="subtitle">Book MS</h3>
    <div class="field">
        <label class="label">Title</label>
        <div class="control">
            <input class="input" @bind-value="@newBook.Title" type="text" placeholder="Book Title">
        </div>
    </div>
    @*Description*@
    <div class="field">
        <label class="label">Description</label>
        <div class="control">
            <input class="input" @bind-value="@newBook.Description" type="text" placeholder="Book Description">
        </div>
    </div>
    @*Author*@
        <div class="field">
        <label class="label">Description</label>
        <div class="control">
            <input class="input" @bind-value="@newBook.Author" type="text" placeholder="Book Author">
        </div>
    </div>
    <div class="field is-grouped">
        <div class="control">
            <button @onclick="SubmitBook" class="button is-link">Submit</button>
        </div>
        <div class="control">
            <button class="button is-link is-light">Cancel</button>
        </div>
    </div>
</div>
@code {
        public BookDto newBook = new()
    {
        Id = Guid.NewGuid()
    };

    [Parameter]
    public EventCallback<BookDto> InsertBook {get; set;}
public async Task SubmitBook()
{

    await InsertBook.InvokeAsync(newBook);
}
}
